.select
	position relative
	width 100%
	.options
		width 100%
		max-height 300px
		overflow-y auto
		position absolute
		border-radius 3px
		background white
		box-shadow 0 0 3px rgba(0,0,0,0.25)
		padding 1%
		margin-top 10px
		ul
			list-style none
			padding-left 0
			li
				display block
				min-height 35px
	.options.hidden
		display none
			
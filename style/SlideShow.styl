.slideShow
	width 400px 
	height 300px
	margin 0 auto
	position relative
	overflow hidden
	.stage
		position absolute
		top 0
		left 0
		height 100%
		.slide img
			width 100%
	.button
		position absolute
		top 50%
		width 34px
		height 34px
		border-radius 100%
		background #666
	.previous.button
		left 1%
	.next.button
		right 1%
	.indicators
		position absolute
		left 0
		bottom 2%
		width 100%
		height 14px
		text-align center
		.indicator
			border-radius 100%
			border 1px solid white
			width 10px
			height 10px
			background rgba(0,0,0,0.3)
			margin 2px 5px
			display inline-block
		.current.indicator
			background white
.slider
	position relative
	width 100%
	.track  
		border-radius 3px
		background rgb(120,120,120)
		box-shadow 0 0 3px rgba(0,0,0,0.25)
		margin-top 15px
		width 100%
	.highlight  
		background rgb(200,0,0)
	.handle
		position absolute
		border-radius 100%
		background rgb(160,160,160)
		box-shadow 0 0 3px rgba(0,0,0,0.25)
		width 35px
		height 35px
		top 0

.timeSpanInput
	width 100%
	height 280px // 56px * 5
	overflow hidden
	position relative
	.picker
		height 100%
		width 45%
		position absolute
		overflow hidden
		ul
			list-style none
			padding 0
			li
				text-align center
				height 56px
				opacity 0.45
				box-sizing border-box
				padding-top 20px
			li.selected
				opacity 1.0
	.end.picker
		left 50%
	.divider
		width 5%
		height 5%
		padding 0
		margin 0
		position absolute
		text-align center
		top 46.5%
		left 45%
	&:after
		content " "
		clear both
		display block
		height 0
		width 100%
		
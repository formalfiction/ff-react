.gridView
	width 100%
	height 300px
	overflow hidden
	position relative
	-webkit-transform translate3d(0,0,0)
	-moz-transform translate3d(0,0,0)
	-ms-transform translate3d(0,0,0)
	-o-transform translate3d(0,0,0)
	transform translate3d(0,0,0)
	.viewport
		overflow auto
		position absolute
		top 0
		left 0
		bottom -10px
		right -10px
		z-index 3
	header.header
		padding 0
		margin 0
		z-index 2
	.colHeader
		background #b44414
		z-index 1
	.pinned
		z-index 2
	section.table
		overflow auto
		.cell
			background white
		.pinned
			z-index 1
			box-shadow 2px 2px 2px rgba(0,0,0,0.15)
	.scrollBar
		z-index 2
		border-radius 3px
		background rgba(0,0,0,0.25)
		box-shadow 0 0 4px rgba(0,0,0,0.15)
		position absolute